pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'jenkins/Docker'
        }
    }
    stages {
        stage('Build') { 
            environment {
                ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES = 1
            }
            steps {
                sh 'npm run printenv'
                sh 'rm -rf node_modules'
                sh 'npm install' 
                sh 'npm run build:electron:linux'
            }
        }
    }
}