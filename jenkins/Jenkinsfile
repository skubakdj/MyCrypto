pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'jenkins/Docker'
            args '-v /home:/hostHome --env TEST_VAR=$TEST_VAR'
        }
    }
    stages {
        stage('Build') { 
            environment {
                ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES = 1
            }
            steps {
                sh 'echo $PATH'
                sh 'which python'
                sh 'which pip'
                sh 'aws --version'
                sh 'npm run printenv'
                sh 'rm -rf node_modules'
                sh 'npm install'
                sh 'npm run build:electron:linux'
                sh 'pwd'
                sh 'ls /'
                sh 'ls /hostHome'
                sh 'cp -r ./dist/electron-builds /hostHome/danny/jenkinsOut/linux'
                sh 'npm run build:electron:windows'
                sh 'cp -r ./dist/electron-builds /hostHome/danny/jenkinsOut/windows'
            }
        }
    }
}